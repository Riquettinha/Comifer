@model List<Comifer.ADM.ViewModels.DetailedBrandViewModel>

@section header {
    <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Marcas</h6>
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                    <li class="breadcrumb-item"><a href="@Url.Action("Principal", "Inicio")"><i class="fas fa-home"></i> Inicio</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Marcas do Fornecedor</li>
                </ol>
            </nav>
        </div>
        <div class="col-lg-6 col-5 text-right">
            <a href="@Url.Action("Incluir","Marcas", new { providerId = ViewBag.ProviderId })" class="btn btn-sm btn-neutral">Nova Marca do Fornecedor</a>
        </div>
    </div>
}

<div class="col">
    <div class="card">
        <div class="card-header border-0">
            <h3 class="mb-0">Marcas do Fornecedor: @ViewBag.ProviderName</h3>
        </div>
        @await Html.PartialAsync("_Brands", Model)
    </div>
</div>
