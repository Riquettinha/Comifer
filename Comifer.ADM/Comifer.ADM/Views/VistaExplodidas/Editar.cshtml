@model Comifer.Data.Models.ProductParent
@{
    ViewData["Title"] = "Editar Vista Explodidas";
}

@section header {
    <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Vista Explodidas</h6>
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                    <li class="breadcrumb-item"><a href="@Url.Action("Principal", "Inicio")"><i class="fas fa-home"></i> Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Principal", "VistaExplodidas")">Vista Explodidas</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Editar</li>
                </ol>
            </nav>
        </div>
        <div class="col-lg-6 col-5 text-right">
            <a href="@Url.Action("Principal","VistaExplodidas")" class="btn btn-sm btn-neutral">Lista de Vistas Explodidas</a>
        </div>
    </div>
}

<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Incluir Marca</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            @using (@Html.BeginForm("Editar", "VistaExplodidas", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Id)
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nome" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Code)
                            @Html.TextBoxFor(m => m.Code, new { @class = "form-control", placeholder = "Código" })
                            @Html.ValidationMessageFor(m => m.Code)
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CategoryId)

                            <div class="input-group">
                                @Html.DropDownListFor(m => m.CategoryId, new List<SelectListItem>(ViewBag.Categories), "Selecione uma Categoria", new { @class = "form-control" })

                                <div class="input-group-append">
                                    <div class="input-group-text" id="btnGroupAddon2">
                                        <a href="@Url.Action("Incluir", "Categorias")">
                                            <i class="fa fa-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.CategoryId)
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.BrandId)

                            <div class="input-group">
                                @Html.DropDownListFor(m => m.BrandId, new List<SelectListItem>(ViewBag.Brands), "Selecione uma Marcas", new { @class = "form-control" })

                                <div class="input-group-append">
                                    <div class="input-group-text" id="btnGroupAddon2">
                                        <a href="@Url.Action("Incluir", "Marcas")">
                                            <i class="fa fa-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.BrandId)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-primary pull-right">Salvar</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>