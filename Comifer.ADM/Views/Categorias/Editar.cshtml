@model Comifer.Data.Models.Category
@{
    ViewData["Title"] = "Editar Categoria";
}

@section header {
    <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Categoria</h6>
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                    <li class="breadcrumb-item"><a href="@Url.Action("Principal", "Inicio")"><i class="fas fa-home"></i> Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Principal", "Categorias")">Categorias</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Editar</li>
                </ol>
            </nav>
        </div>
        <div class="col-lg-6 col-5 text-right">
            <a href="@Url.Action("Principal","Categorias")" class="btn btn-sm btn-neutral">Lista de Categorias</a>
        </div>
    </div>
}

<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Editar</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            @using (@Html.BeginForm("Editar", "Categorias", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Id)
                <div class="pl-lg-12 form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nome da Categoria" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
                <div class="pl-lg-12">
                    <button type="submit" class="btn btn-primary pull-right">Salvar</button>
                </div>
            }
        </div>
    </div>
</div>