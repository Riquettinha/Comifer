@model List<Comifer.ADM.ViewModels.DetailedProviderViewModel>
@{
    ViewData["Title"] = "Lista Fornecedores";
}

@section header {
    <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Fornecedores</h6>
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                    <li class="breadcrumb-item"><a href="@Url.Action("Principal", "Inicio")"><i class="fas fa-home"></i> Inicio</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Fornecedores</li>
                </ol>
            </nav>
        </div>
        <div class="col-lg-6 col-5 text-right">
            <a href="@Url.Action("Incluir","Fornecedores")" class="btn btn-sm btn-neutral">Novo</a>
        </div>
    </div>
}

<div class="col">
    <div class="card">
        <div class="card-header border-0">
            <h3 class="mb-0">Lista</h3>
        </div>
        <div class="table-responsive">
            <table class="table align-items-center table-flush">
                <thead class="thead-light">
                    <tr>
                        <th scope="col" class="sort" data-sort="name">Nome</th>
                        <th scope="col" class="sort text-center" data-sort="deliverytime">Prazo para Entrega</th>
                        <th scope="col" class="sort text-center" data-sort="brands">Qtd. Marcas do Fornecedores</th>
                        <th scope="col" class="text-center" width="200px">Ações</th>
                    </tr>
                </thead>
                <tbody class="list">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="name">
                                @item.Name
                            </td>
                            <td class="deliverytime text-center">
                                @item.DeliveryTime
                            </td>
                            <td class="brands text-center">
                                @item.BrandsCount
                            </td>
                            <td class="text-right text-center">
                                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Editar", "Fornecedores", new { id = @item.Id })" role="button">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a class="btn btn-sm btn-outline-info" href="@Url.Action("Detalhes", "Fornecedores", new { id = @item.Id })" role="button">
                                    <i class="fa fa-search"></i> Detalhes
                                </a>
                                <a class="btn btn-sm btn-outline-dark" href="@Url.Action("Principal", "Marcas", new { idFornecedor = @item.Id })" role="button">
                                    <i class="fa fa-copyright"></i> Marcas
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
